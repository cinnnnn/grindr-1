#!/usr/bin/env python
import getopt, sys, yaml
from workr import fetch, VERSION

DEBUG=None

def usage():
   print "feedr", VERSION
   print "usage: feedr [<actionfiles>]"
   print ""
   print "either supply actions via stdin or in actionfiles"

if(__name__=="__main__"):
   # handling of options
   try:
      opts, args = getopt.getopt(sys.argv[1:], "hd", ["help","debug"])
   except getopt.GetoptError:
      usage()
      sys.exit(2)
   for o, a in opts:
      if o in ("-h","--help"):
         usage()
         sys.exit()
      if o in ("-d","--debug"):
         DEBUG=1
   if(len(args)>0):
      # process each url specified 
      for action in args:
         sys.stderr.write("processing "+action+'\n')
         try:
            loginparams = yaml.load(file(action, 'r'))
         except yaml.YAMLError, exc:
            print "Error in configuration file:", exc
            sys.exit(1)
         result,xhtml=fetch(loginparams,debug=DEBUG)
         print result
   else:
      # we need to process stdin
      sys.stderr.write("processing stdin\n")
      try:
         loginparams = yaml.load(sys.stdin.read())
      except yaml.YAMLError, exc:
         print "Error in configuration file:", exc
      result,xhtml=fetch(loginparams,debug=DEBUG)
      print result
